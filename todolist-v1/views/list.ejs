<%- include("header") -%> 

<div class="box" id="heading">
    <!-- ejs templating -->
    <h1><%= kindOfDay %></h1>
</div>

<div class="box">
    <% for( let index = 0; index < newListItems.length; index++ ) { %>
    <div class="item">
        <input type="checkbox" />
        <p><%= newListItems[index] %></p>
    </div>
    <% } %>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Enter new item" autocomplete="off" />
        <button type="submit">+</button>
    </form>
</div>

<%- include("footer") -%> 